{
    "defines": [
        ".DEFAULT_GOAL := bin/debug/nightwing"
    ],

    "nightwing-debug": {
        "type": "source",
        "depends": [],
        "root": "./",
        "target": "bin/debug/nightwing",
        "sources" : [
	       "*.cc",
           "src/*.cc"
        ],
        "ignores": [
           "./thirdparty",
	       "./_old"
        ],
        "dependency_command": "c++ -MM",
        "compiler": {
            "command": "c++",
            "libs": [],
            "flags": [
                "ggdb",
                "DNIGHTWING_DEBUG",
                "Wall"
            ],
            "includes": [
                "thirdparty/"
            ],
            "pkg_configs": [
                "xcb-ewmh",
		        "cairo"
            ],
            "obj_path": "build/debug/"
        },
        "out": "build/nightwing.mk"
    },

    "nightwing-release": {
        "type": "source",
        "depends": [],
        "root": "./",
        "target": "bin/nightwing",
        "sources" : [
            "*.cc",
            "src/*.cc"
        ],
        "ignores": [
            "./thirdparty",
            "./_old",
            "./src*.*-test.cc"
        ],
        "dependency_command": "c++ -MM",
        "compiler": {
            "command": "c++",
            "libs": [],
            "flags": [],
            "includes": [
                "thirdparty/"
            ],
            "pkg_configs": [
                "xcb-ewmh",
		        "cairo"
            ],
            "obj_path": "build/release/"
        },
        "out": "build/nightwing.mk"
    },

    "clean": {
        "type": "exec",
        "depends": [],
        "commands": [
            "rm -f build/*.o build/release/*.o build/debug/*.o bin/debug/nightwing bin/nightwing"
        ]
    },

    "release": {
        "type": "exec",
        "depends": [
            "bin/nightwing"
        ],
        "commands": [
        ]
    },

    "make": {
        "type": "exec",
        "commands": [
            "lbtcli -m .lbt"
        ]
    }
}
